.tit_seabox {
  width: calc(100%);
  background: #fff;
  height: 72rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.tit_seabox_bar {
  width: calc(100% - 20rpx);
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  background: #f5f5f5;
  padding-left: 32rpx;
}
/*开始搜索时*/
.tit_seabox_bar.tit_start_search {
  width: calc(100% - 90rpx);
}


/*有权限添加活动*/
.tit_seabox_bar.tit_seabox_add {
  width: calc(100% - 80rpx);
}
/*开始搜索且有权限添加*/
.tit_seabox_bar.tit_start_search.tit_seabox_add {
  width: calc(100% - 150rpx);
}

.tit_seabox_bar icon {
  margin-right: 20rpx;
}

.tit_seabox input {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  width: 100%;
  margin-right: 32rpx;
}

.activity_add {
  width: 60rpx;
  text-align: right;
  border-left: 5rpx solid #f2f2f2;
  margin-left: 20rpx;
}

.activity_add image {
  width: 40rpx;
  height: 40rpx;
}

.activity_seabtn {
  font-size: 28rpx;
  width: 70rpx;
  text-align: right;
}
